<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VizinApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 240px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: #fff;
            border-right: 1px solid #dee2e6;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .sidebar .logo {
            font-size: 1.2rem;
            font-weight: bold;
            color: #4682b4;
            padding: 20px;
            border-bottom: 1px solid #e9ecef;
            text-align: center;
        }

        .sidebar .nav-link {
            color: #333;
            font-weight: 500;
            padding: 10px 20px;
            border-radius: 8px;
            margin: 2px 10px;
            transition: 0.2s;
        }

        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background-color: #4682b4;
            color: white;
        }

        .sidebar .nav-link i {
            width: 22px;
            text-align: center;
            margin-right: 10px;
        }

        .user-info {
            padding: 15px 20px;
            border-top: 1px solid #e9ecef;
            font-size: 0.9rem;
            color: #555;
        }

        .user-info span {
            display: block;
            color: #4682b4;
            font-weight: bold;
        }

        .content {
            margin-left: 240px;
            padding: 30px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div>
            <div class="logo">
                <i class="fa-solid fa-building"></i> VizinApp
                <div class="text-muted small">Sistema de Gestão</div>
            </div>
            <nav class="nav flex-column mt-3">
                <a href="/Dashboard" class="nav-link active"><i class="fa-solid fa-chart-line"></i> Dashboard</a>
                <a href="/Imoveis" class="nav-link"><i class="fa-solid fa-house"></i> Imóveis</a>
                <a href="/Pessoas" class="nav-link"><i class="fa-solid fa-users"></i> Pessoas</a>
                <a href="/Contratos" class="nav-link"><i class="fa-solid fa-file-contract"></i> Contratos</a>
                <a href="/Financeiro" class="nav-link"><i class="fa-solid fa-money-bill-trend-up"></i> Financeiro</a>
                <a href="/Vistorias" class="nav-link"><i class="fa-solid fa-clipboard-check"></i> Vistorias</a>
                <a href="/Manutencoes" class="nav-link"><i class="fa-solid fa-screwdriver-wrench"></i> Manutenções</a>
                <a href="/Comunicacao" class="nav-link"><i class="fa-solid fa-comments"></i> Comunicação</a>
                <a href="/Acesso" class="nav-link"><i class="fa-solid fa-door-open"></i> Controle de Acesso</a>
                <a href="/Relatorios" class="nav-link"><i class="fa-solid fa-chart-pie"></i> Relatórios</a>
            </nav>
        </div>

        <div class="user-info">
            <i class="fa-solid fa-user-circle"></i> Admin Sistema
            <span>Administrador</span>
        </div>
    </div>

    <!-- Conteúdo principal -->
    <div class="content">
        @RenderBody()
    </div>

</body>
</html>
