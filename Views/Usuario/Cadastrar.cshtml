@model TrabalhoElvis2.Models.Usuario

@{
    ViewData["Title"] = "Cadastro - VizinhApp";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            width: 100%;
            overflow: hidden;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 1rem;
        }

        .cadastro-wrapper {
            width: 100%;
            max-width: 520px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .cadastro-container {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            padding: 2.5rem 2rem;
            width: 100%;
            max-height: 90vh;
            overflow-y: auto;
        }

        .cadastro-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .cadastro-header .logo {
            width: 70px;
            height: 70px;
            margin: 0 auto 1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }

        .cadastro-header h2 {
            color: #212529;
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 0.5rem;
        }

        .cadastro-header p {
            color: #6c757d;
            font-size: 0.95rem;
            margin: 0;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-group label {
            color: #212529;
            font-weight: 600;
            font-size: 0.95rem;
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-control, .form-select {
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            outline: none;
        }

        .form-control::placeholder {
            color: #adb5bd;
        }

        .btn-cadastro {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: #fff;
            font-weight: 600;
            border-radius: 8px;
            width: 100%;
            padding: 0.85rem 1rem;
            font-size: 1rem;
            margin-top: 1.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }

        .btn-cadastro:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
            color: #fff;
            text-decoration: none;
        }

        .btn-cadastro:active {
            transform: translateY(0);
        }

        .campos-dinamicos {
            margin-top: 1.25rem;
            padding: 1rem;
            background-color: #f8f9ff;
            border-radius: 8px;
            border-left: 4px solid #667eea;
        }

        .campos-dinamicos h6 {
            color: #667eea;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .form-footer {
            text-align: center;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid #dee2e6;
        }

        .form-footer p {
            color: #6c757d;
            font-size: 0.9rem;
            margin: 0;
        }

        .form-footer a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .form-footer a:hover {
            color: #764ba2;
            text-decoration: underline;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        .hidden {
            display: none !important;
        }

        @@media (max-width: 576px) {
            body {
                padding: 1rem;
            }

            .cadastro-container {
                padding: 2rem 1.5rem;
            }

            .cadastro-header h2 {
                font-size: 1.5rem;
            }

            .cadastro-header .logo {
                width: 60px;
                height: 60px;
                font-size: 1.8rem;
            }

            .form-group label {
                font-size: 0.9rem;
            }

            .form-control, .form-select {
                font-size: 0.9rem;
                padding: 0.65rem 0.9rem;
            }

            .btn-cadastro {
                padding: 0.75rem 0.9rem;
                font-size: 0.95rem;
            }
        }

        @@media (max-width: 360px) {
            .cadastro-container {
                padding: 1.5rem 1rem;
            }

            .cadastro-header h2 {
                font-size: 1.3rem;
            }

            .cadastro-header .logo {
                width: 55px;
                height: 55px;
                font-size: 1.6rem;
            }
        }
    </style>
</head>
<body>
<div class="cadastro-wrapper">
    <div class="cadastro-container">
        <div class="cadastro-header">
            <div class="logo">
                <i class="fa-solid fa-building"></i>
            </div>
            <h2>VizinhApp</h2>
            <p>Crie sua conta para acessar o sistema</p>
        </div>

        <form asp-action="Cadastrar" asp-controller="Usuario" method="post">
        <!-- Campos Básicos (sempre visíveis) -->
        <div class="form-group mb-3">
            <label for="tipoUsuario" class="fw-bold">
                <i class="bi bi-tag"></i> Tipo de Usuário <span class="text-danger">*</span>
            </label>
            <select id="tipoUsuario" name="TipoUsuario" class="form-control" required>
                <option value="">-- Selecione um tipo --</option>
                <option value="Administrador">👨‍💼 Administrador</option>
                <option value="Síndico">👔 Síndico</option>
                <option value="Morador">🏠 Morador</option>
            </select>
            <span asp-validation-for="TipoUsuario" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="email" class="fw-bold">
                <i class="bi bi-envelope"></i> E-mail <span class="text-danger">*</span>
            </label>
            <input id="email" type="email" name="Email" class="form-control" placeholder="seu@email.com" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="senha" class="fw-bold">
                <i class="bi bi-lock"></i> Senha <span class="text-danger">*</span>
            </label>
            <input id="senha" type="password" name="Senha" class="form-control" placeholder="Digite uma senha (6-12 caracteres)" required />
            <span asp-validation-for="Senha" class="text-danger small"></span>
        </div>

        <!-- Campos Dinâmicos (aparecem conforme tipo selecionado) -->

        <!-- Campos Administrador -->
        <div id="camposAdmin" class="campos-dinamicos hidden">
            <h6 class="text-primary mb-3"><i class="bi bi-shield-check me-2"></i>Informações do Administrador</h6>
            <div class="form-group mb-2">
                <label for="nomeAdmin" class="fw-bold">Nome do Administrador <span class="text-danger">*</span></label>
                <input id="nomeAdmin" type="text" name="NomeAdministrador" class="form-control" placeholder="Seu nome" />
                <span asp-validation-for="NomeAdministrador" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="nomeCondominio" class="fw-bold">Nome do Condomínio <span class="text-danger">*</span></label>
                <input id="nomeCondominio" type="text" name="NomeCondominio" class="form-control" placeholder="Nome do condomínio" />
                <span asp-validation-for="NomeCondominio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="cnpj" class="fw-bold">CNPJ <span class="text-danger">*</span></label>
                <input id="cnpj" type="text" name="Cnpj" class="form-control" placeholder="XX.XXX.XXX/XXXX-XX" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
        </div>

        <!-- Campos Síndico -->
        <div id="camposSindico" class="campos-dinamicos hidden">
            <h6 class="text-primary mb-3"><i class="bi bi-person-fill me-2"></i>Informações do Síndico</h6>
            <div class="form-group mb-2">
                <label for="nomeSindico" class="fw-bold">Nome Completo <span class="text-danger">*</span></label>
                <input id="nomeSindico" type="text" name="NomeCompleto" class="form-control" placeholder="Seu nome completo" />
                <span asp-validation-for="NomeCompleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="telefoneSindico" class="fw-bold">Telefone</label>
                <input id="telefoneSindico" type="tel" name="Telefone" class="form-control" placeholder="(XX) 9XXXX-XXXX" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>

        <!-- Campos Morador -->
        <div id="camposMorador" class="campos-dinamicos hidden">
            <h6 class="text-primary mb-3"><i class="bi bi-house-fill me-2"></i>Informações do Morador</h6>
            <div class="form-group mb-2">
                <label for="nomeMorador" class="fw-bold">Nome Completo <span class="text-danger">*</span></label>
                <input id="nomeMorador" type="text" name="NomeCompleto" class="form-control" placeholder="Seu nome completo" />
                <span asp-validation-for="NomeCompleto" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="apartamento" class="fw-bold">Apartamento/Unidade</label>
                <input id="apartamento" type="text" name="Apartamento" class="form-control" placeholder="Ex: APT 101" />
                <span asp-validation-for="Apartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="telefoneMorador" class="fw-bold">Telefone</label>
                <input id="telefoneMorador" type="tel" name="Telefone" class="form-control" placeholder="(XX) 9XXXX-XXXX" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>

        <!-- Botão Submit -->
        <button type="submit" class="btn btn-cadastro">
            <i class="bi bi-check-circle me-2"></i>Cadastrar
        </button>

        <div class="form-footer">
            <p>Já possui conta? <a asp-action="Login" asp-controller="Usuario">Faça login aqui</a></p>
        </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/jquery.validate.unobtrusive.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const tipoSelect = document.getElementById('tipoUsuario');
        const camposAdmin = document.getElementById('camposAdmin');
        const camposSindico = document.getElementById('camposSindico');
        const camposMorador = document.getElementById('camposMorador');

        const nomeSindicoInput = document.getElementById('nomeSindico');
        const nomeMoradorInput = document.getElementById('nomeMorador');

        function limparValidacoesDinamicas() {
            if (nomeSindicoInput) {
                nomeSindicoInput.removeAttribute('required');
            }
            if (nomeMoradorInput) {
                nomeMoradorInput.removeAttribute('required');
            }
        }

        function mostrarCampos() {
            const tipo = tipoSelect.value;

            // Limpa todas as classes hidden
            camposAdmin.classList.add('hidden');
            camposSindico.classList.add('hidden');
            camposMorador.classList.add('hidden');

            // Remove validações dinâmicas anteriores
            limparValidacoesDinamicas();

            // Desabilita todos os inputs dos blocos para evitar envio de campos ocultos
            function disableInputs(container) {
                Array.from(container.querySelectorAll('input, select, textarea')).forEach(i => i.setAttribute('disabled', 'disabled'));
            }
            function enableInputs(container) {
                Array.from(container.querySelectorAll('input, select, textarea')).forEach(i => i.removeAttribute('disabled'));
            }

            disableInputs(camposAdmin);
            disableInputs(camposSindico);
            disableInputs(camposMorador);

            // Mostra conforme o tipo e ajusta required e enabled
            if (tipo === 'Administrador') {
                camposAdmin.classList.remove('hidden');
                enableInputs(camposAdmin);
            } else if (tipo === 'Síndico') {
                camposSindico.classList.remove('hidden');
                if (nomeSindicoInput) {
                    nomeSindicoInput.setAttribute('required', 'required');
                }
                enableInputs(camposSindico);
            } else if (tipo === 'Morador') {
                camposMorador.classList.remove('hidden');
                if (nomeMoradorInput) {
                    nomeMoradorInput.setAttribute('required', 'required');
                }
                enableInputs(camposMorador);
            }
        }

        // Executa no carregamento para manter estado se houver postback
        mostrarCampos();

        tipoSelect.addEventListener('change', mostrarCampos);
    });
</script>
</body>
</html>
