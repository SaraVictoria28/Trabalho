@model TrabalhoElvis2.Models.Usuario

@{
    ViewData["Title"] = "Cadastro - VizinhApp";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #bbdefb);
        font-family: 'Poppins', sans-serif;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .cadastro-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        width: 450px;
        padding: 40px 30px;
    }

    .cadastro-container h3 {
        color: #1565c0;
        font-weight: 600;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px 12px;
    }

    .btn-primary {
        background-color: #1565c0;
        border: none;
        border-radius: 10px;
        width: 100%;
        padding: 10px;
        margin-top: 15px;
        font-weight: 600;
    }

    .btn-primary:hover {
        background-color: #0d47a1;
    }

    .btn-secondary {
        border-radius: 10px;
        margin-top: 10px;
        width: 100%;
    }

    .text-link {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
    }

    .text-link a {
        color: #1565c0;
        text-decoration: none;
        font-weight: 600;
    }

    .text-link a:hover {
        text-decoration: underline;
    }

    .campos-dinamicos {
        margin-top: 20px;
        padding: 15px;
        background-color: #f5f9ff;
        border-radius: 10px;
        border-left: 4px solid #1565c0;
    }

    .hidden {
        display: none !important;
    }
</style>

<div class="cadastro-container">
    <h3><i class="bi bi-building"></i> VizinhApp</h3>
    <p class="text-center text-muted mb-4">Crie sua conta para acessar o sistema</p>

    <form asp-action="Cadastrar" asp-controller="Usuario" method="post" novalidate>
        <!-- Campos Básicos (sempre visíveis) -->
        <div class="form-group mb-3">
            <label for="tipoUsuario" class="fw-bold">
                <i class="bi bi-tag"></i> Tipo de Usuário <span class="text-danger">*</span>
            </label>
            <select id="tipoUsuario" name="TipoUsuario" class="form-control" required>
                <option value="">-- Selecione um tipo --</option>
                <option value="Administrador">👨‍💼 Administrador</option>
                <option value="Síndico">👔 Síndico</option>
                <option value="Morador">🏠 Morador</option>
            </select>
            <span asp-validation-for="TipoUsuario" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="email" class="fw-bold">
                <i class="bi bi-envelope"></i> E-mail <span class="text-danger">*</span>
            </label>
            <input id="email" type="email" name="Email" class="form-control" placeholder="seu@email.com" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="senha" class="fw-bold">
                <i class="bi bi-lock"></i> Senha <span class="text-danger">*</span>
            </label>
            <input id="senha" type="password" name="Senha" class="form-control" placeholder="Digite uma senha (6-12 caracteres)" required />
            <span asp-validation-for="Senha" class="text-danger small"></span>
        </div>

        <!-- Campos Dinâmicos (aparecem conforme tipo selecionado) -->

        <!-- Campos Administrador -->
        <div id="camposAdmin" class="campos-dinamicos hidden">
            <h6 class="text-primary mb-3"><i class="bi bi-shield-check me-2"></i>Informações do Administrador</h6>
            <div class="form-group mb-2">
                <label for="nomeAdmin" class="fw-bold">Nome do Administrador <span class="text-danger">*</span></label>
                <input id="nomeAdmin" type="text" name="NomeAdministrador" class="form-control" placeholder="Seu nome" />
                <span asp-validation-for="NomeAdministrador" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="nomeCondominio" class="fw-bold">Nome do Condomínio <span class="text-danger">*</span></label>
                <input id="nomeCondominio" type="text" name="NomeCondominio" class="form-control" placeholder="Nome do condomínio" />
                <span asp-validation-for="NomeCondominio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="cnpj" class="fw-bold">CNPJ <span class="text-danger">*</span></label>
                <input id="cnpj" type="text" name="Cnpj" class="form-control" placeholder="XX.XXX.XXX/XXXX-XX" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
        </div>

        <!-- Campos Síndico -->
        <div id="camposSindico" class="campos-dinamicos hidden">
            <h6 class="text-primary mb-3"><i class="bi bi-person-fill me-2"></i>Informações do Síndico</h6>
            <div class="form-group mb-2">
                <label for="nomeSindico" class="fw-bold">Nome Completo <span class="text-danger">*</span></label>
                <input id="nomeSindico" type="text" name="NomeCompleto" class="form-control" placeholder="Seu nome completo" />
                <span asp-validation-for="NomeCompleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="telefoneSindico" class="fw-bold">Telefone</label>
                <input id="telefoneSindico" type="tel" name="Telefone" class="form-control" placeholder="(XX) 9XXXX-XXXX" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>

        <!-- Campos Morador -->
        <div id="camposMorador" class="campos-dinamicos hidden">
            <h6 class="text-primary mb-3"><i class="bi bi-house-fill me-2"></i>Informações do Morador</h6>
            <div class="form-group mb-2">
                <label for="nomeMorador" class="fw-bold">Nome Completo <span class="text-danger">*</span></label>
                <input id="nomeMorador" type="text" name="NomeCompleto" class="form-control" placeholder="Seu nome completo" />
                <span asp-validation-for="NomeCompleto" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="apartamento" class="fw-bold">Apartamento/Unidade</label>
                <input id="apartamento" type="text" name="Apartamento" class="form-control" placeholder="Ex: APT 101" />
                <span asp-validation-for="Apartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="telefoneMorador" class="fw-bold">Telefone</label>
                <input id="telefoneMorador" type="tel" name="Telefone" class="form-control" placeholder="(XX) 9XXXX-XXXX" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>

        <!-- Botão Submit -->
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle me-2"></i>Cadastrar
        </button>

        <div class="text-link">
            Já possui conta?
            <a asp-action="Login" asp-controller="Usuario">Faça login aqui</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tipoSelect = document.getElementById('tipoUsuario');
            const camposAdmin = document.getElementById('camposAdmin');
            const camposSindico = document.getElementById('camposSindico');
            const camposMorador = document.getElementById('camposMorador');

            function mostrarCampos() {
                const tipo = tipoSelect.value;

                // Limpa todas as classes hidden
                camposAdmin.classList.add('hidden');
                camposSindico.classList.add('hidden');
                camposMorador.classList.add('hidden');

                // Mostra conforme o tipo
                if (tipo === 'Administrador') {
                    camposAdmin.classList.remove('hidden');
                } else if (tipo === 'Síndico') {
                    camposSindico.classList.remove('hidden');
                } else if (tipo === 'Morador') {
                    camposMorador.classList.remove('hidden');
                }
            }

            tipoSelect.addEventListener('change', mostrarCampos);
        });
    </script>
}
