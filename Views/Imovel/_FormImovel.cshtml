@model TrabalhoElvis2.Models.Imovel

<style>
    .form-control, .form-select, textarea {
        border-radius: 10px;
        border: 1px solid #d1d5db;
        background-color: #f9fafb;
        font-size: 0.95rem;
        padding: 10px 12px;
        transition: all 0.2s ease;
    }

    .form-control:focus, .form-select:focus, textarea:focus {
        border-color: #2563eb;
        box-shadow: 0 0 0 3px rgba(37,99,235,0.15);
        background-color: #fff;
    }

    label {
        font-weight: 600;
        color: #374151;
        margin-bottom: 5px;
    }

    .text-danger {
        font-size: 0.85rem;
        color: #dc2626 !important;
        margin-top: 3px;
    }

    textarea {
        resize: vertical;
        min-height: 80px;
    }
</style>

<div class="row g-3">
    <div class="col-md-6">
        <label asp-for="Codigo"></label>
        <input asp-for="Codigo" class="form-control" />
        <span asp-validation-for="Codigo" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Tipo"></label>
        <select asp-for="Tipo" class="form-select">
            <option value="">Selecione</option>
            <option>Apartamento</option>
            <option>Cobertura</option>
            <option>Sala Comercial</option>
        </select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Quartos"></label>
        <input asp-for="Quartos" type="number" class="form-control" />
        <span asp-validation-for="Quartos" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Banheiros"></label>
        <input asp-for="Banheiros" type="number" class="form-control" />
        <span asp-validation-for="Banheiros" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Metragem">Metragem (m²)</label>
        <input asp-for="Metragem" type="number" step="0.1" class="form-control" />
        <span asp-validation-for="Metragem" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="ValorAluguel">Valor do Aluguel (R$)</label>
        <input asp-for="ValorAluguel" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="ValorAluguel" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="CondominoId">Proprietário</label>
        <select asp-for="CondominoId" class="form-select" asp-items="ViewBag.Condominos">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="CondominoId" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Observacoes"></label>
        <textarea asp-for="Observacoes" class="form-control"></textarea>
        <span asp-validation-for="Observacoes" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-select">
            <option value="Vago">Vago</option>
            <option value="Ocupado">Ocupado</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
</div>
