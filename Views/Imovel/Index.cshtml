@model IEnumerable<TrabalhoElvis2.Models.Imovel>

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Imóveis";
    var tipoUsuario = Context.Session.GetString("TipoUsuario");
}

@section Styles {
     <!-- Importa uma biblioteca (framework) e ícones -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/imoveis.css" />
}

<!-- Restrição de acesso -->
@if (tipoUsuario != "Administrador")
{
    <div class="text-center mt-5">
        <h2 class="text-danger"><i class="bi bi-shield-lock"></i> Acesso Negado</h2>
        <p>Você não tem permissão para acessar esta página.</p>
        <a href="/Usuario/Login" class="btn btn-primary mt-3">Voltar ao Login</a>
    </div>
}
else
{
    <div class="container mt-4 mb-5">
        <!-- Cabeçalho -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h3 class="fw-bold text-dark mb-1">Imóveis</h3>
                <p class="text-muted mb-0">Gestão de imóveis do condomínio</p>
            </div>
                    <!-- Botão que abre o modal de cadastro -->
            <button class="btn btn-primary d-flex align-items-center gap-2" data-bs-toggle="modal" data-bs-target="#modalCadastro">
                <i class="bi bi-plus-lg"></i> Novo Imóvel
            </button>
        </div>

        <!-- FILTROS de status E BUSCA -->
        <form method="get" asp-action="Index" class="d-flex flex-wrap gap-2 mb-4">
            <div class="flex-grow-1">
                <input type="text" class="form-control" placeholder="Buscar por código, endereço ou proprietário..." disabled />
            </div>
            <div>
                <!-- AQUI ESTÁ O SELECT FUNCIONAL -->
                <select name="statusFiltro" class="form-select" onchange="this.form.submit()">
                    <option value="Todos os Status" selected="@(ViewBag.StatusFiltro == "Todos os Status")">Todos os Status</option>
                    <option value="Ocupado" selected="@(ViewBag.StatusFiltro == "Ocupado")">Ocupado</option>
                    <option value="Vago" selected="@(ViewBag.StatusFiltro == "Vago")">Vago</option>
                </select>
            </div>
        </form>

        <!-- LISTA DE IMÓVEIS -->
        <div class="list-group">
            @foreach (var item in Model)
            {
                <div class="list-group-item shadow-sm rounded-3 mb-3 p-4 border-0" style="background-color:#fff;">
                    <div class="d-flex justify-content-between align-items-start flex-wrap">
                        <div class="d-flex align-items-center gap-3">
                            <i class="bi bi-house-door text-primary fs-3"></i>
                            <div>
                                <h5 class="mb-1 fw-semibold">@item.Codigo</h5>
                                <p class="text-muted mb-1">
                                    <i class="bi bi-geo-alt"></i> @item.Observacoes
                                </p>
                                <div class="d-flex gap-3 text-muted small">
                                    <span><i class="bi bi-door-open"></i> @item.Quartos quartos</span>
                                    <span><i class="bi bi-badge-wc"></i> @item.Banheiros banheiros</span>
                                    <span><i class="bi bi-bounding-box"></i> @item.Metragem m²</span>
                                </div>
                            </div>
                        </div>

                        <div class="text-end">
                            <span class="badge rounded-pill px-3 py-2 fs-6 @(item.Status == "Ocupado" ? "bg-dark" : "bg-light text-dark border")">
                                @item.Status
                            </span>
                            <p class="text-muted mt-3 mb-1">Aluguel</p>
                            <h5 class="text-success fw-bold">R$ @item.ValorAluguel.ToString("N2")</h5>
                        </div>
                    </div>

                    <div class="mt-3 border-top pt-2 d-flex justify-content-between align-items-center">
                        <p class="mb-0 text-muted small">
                            Proprietário <strong>@item.Condomino?.NomeCompleto</strong>
                        </p>
                        <div>
                            <a asp-controller="Imovel" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form asp-action="Excluir" asp-route-id="@item.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- MODAL CADASTRAR NOVO IMÓVEL -->
    <div class="modal fade" id="modalCadastro" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content p-4">
                <div class="modal-header">
                    <h5 class="modal-title">Cadastrar Novo Imóvel</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <form asp-action="Cadastrar" method="post">
                    <div class="modal-body">
                        @await Html.PartialAsync("_FormImovel", new TrabalhoElvis2.Models.Imovel())
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
}
